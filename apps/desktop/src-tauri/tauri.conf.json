{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-config-schema/schema.json",
  "productName": "Spaceduck",
  "version": "0.1.0",
  "identifier": "ai.spaceduck.desktop",
  "build": {
    "beforeBuildCommand": "bun run build:all",
    "beforeDevCommand": "",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "spaceduck",
        "width": 1024,
        "height": 768,
        "minWidth": 600,
        "minHeight": 400
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval' http://localhost:* ws://localhost:*; img-src 'self' data: blob:; font-src 'self' https://fonts.gstatic.com data:"
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/icon.png",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png"
    ],
    "externalBin": [
      "binaries/spaceduck-server"
    ],
    "targets": "all"
  },
  "plugins": {
    "shell": {
      "open": "^https?://"
    }
  }
}
