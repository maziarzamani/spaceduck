{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-config-schema/schema.json",
  "productName": "Spaceduck",
  "version": "0.1.0",
  "identifier": "ai.spaceduck.desktop",
  "build": {
    "beforeBuildCommand": "bun run build:sidecar",
    "beforeDevCommand": "bun run build:sidecar",
    "frontendDist": "./",
    "devUrl": "http://localhost:3000"
  },
  "app": {
    "windows": [
      {
        "title": "Spaceduck",
        "width": 1024,
        "height": 768,
        "minWidth": 600,
        "minHeight": 400,
        "url": "loading.html"
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://localhost:3000 ws://localhost:3000; style-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/spaceduck-server"
    ],
    "targets": "all"
  },
  "plugins": {
    "shell": {
      "open": false
    }
  }
}
